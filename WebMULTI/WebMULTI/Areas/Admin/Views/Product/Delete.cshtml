@model WebMULTI.Models.SanPham

@{
	ViewBag.Title = "Quản lý sản phẩm";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style type="text/css">
	img {
		width: 200px;
	}

	.dl-horizontal dt {
		font-weight: bold;
	}

	.dl-horizontal dd {
		margin-left: 200px;
	}
    tr td:first-child {
        font-weight: bold;
        width:200px;
        column-span:2;
    }
</style>
<h4>XÓA SẢN PHẨM</h4>

<h5>Bạn thật sự muốn xóa?</h5>
<h6 style="color:red">@Html.Raw(ViewBag.ThongBao)</h6>

<div>
    <hr />
    <table>
        <tr>
            <td >
                Tên sản phẩm:
            </td>
            <td>
                @Html.DisplayFor(model => model.TenSP)

            </td>

        </tr>
        <tr>
            <td>
                Loại:
            </td>
            <td>
                @Html.DisplayFor(model => model.LoaiSP.TenLoai)
            </td>
        <tr>
            <td>
                Danh mục
            </td>

            <td>
                @Html.DisplayFor(model => model.DanhMuc.TenDM)
            </td>
        </tr>
        <tr>
            <td>
                Kích cỡ:
            </td>
            <td>
                @Html.DisplayFor(model => model.Size)
            </td>
        </tr>
        <tr>
            <td>
                Mô tả:
            </td>
            <td>
                @Html.Raw(@Model.Mota.ToString())
            </td>
        </tr>
        <tr>
            <td>
                Ảnh:
            </td>
            <td>
                <img src="~/img/@Model.AnhBia" alt=" @Model.TenSP">
            </td>
        </tr>
        <tr>
            <td>
                Giá:
            </td>
            <td>
                @Html.FormatValue(@Model.GiaSP, "{0:#,##0}") VNĐ
            </td>
        </tr>
        <tr>
            <td>
                Ngày nhập:
            </td>
            <td>
                @Html.FormatValue(@Model.NgayNhap, "{0:dd/MM/yyyy}")
            </td>
        </tr>

        <tr>
            <td>
                Số lượng bán:
            </td>
            <td>
                @Html.DisplayFor(model => model.SoLuongBan)
            </td>
        </tr>
        <tr>
    <td>
        Số lượng tồn:
    </td>
    <td>
        @Html.DisplayFor(model => model.SoLuongTon)
    </td>
    </tr>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ SẢN PHẨM", "Index")
        </div>
    }
</div>
