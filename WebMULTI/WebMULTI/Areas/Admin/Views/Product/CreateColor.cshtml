@*@model IEnumerable<WebMULTI.Models.Product_Color>*@

@{
   
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        select {
            width: 150px;
            padding: 5px;
        }
        
    </style>
</head>
<h2>Chọn màu cho sản phẩm</h2>
@using (Html.BeginForm("CreateColor", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table>

        <tr>
            <td>
                @Html.DropDownList("idColor", ViewBag.Colors as SelectList)
            </td>
            <td>
                @Html.DropDownList("idColor2", ViewBag.Colors2 as SelectList)
            </td>
            <tr>
            <td>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 mt-4">
                        <input type="submit" value="Thêm mới" class="btn btn-dark" />
                    </div>
                </div>
            </td>
                </tr>
        </tr>
    </table>
 
    <div class="alert alert-success">
        @ViewBag.tb
    </div>
 }


