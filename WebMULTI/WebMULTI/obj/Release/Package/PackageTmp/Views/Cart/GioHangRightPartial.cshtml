
@using WebMULTI.Models
@model List<Cart> 

<head>
    <style>
        .cart-content {
            overflow-y: scroll;
            height: 300px;
            width: 350px;
            padding-right: 20px;
        }

        ::-webkit-scrollbar {
            width: .5rem;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            box-shadow: inset 0 0 3px grey;
            border-radius: 10px;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: black;
            border-radius: 5px;
        }
        .cart {
            position: fixed;
            top: 0;
            right: -370px;
            width: 360px;
            min-height: 100vh;
            padding: 20px;
            background: white;
            box-shadow: -2px 0 4px hsl(0 4% 15% / 10%);
            transition: 0.5s;
            z-index: 1000;
        }

            .cart.active {
                right: 0;
            }

        .cart-title {
            display: flex;
            justify-content: space-between;
            font-size: 1.5rem;
        }

        .cart-box {
            display: grid;
            grid-template-columns: 30% 65% 5%;
            align-items: center;
            /* gap: 1rem; */
            margin-top: 1rem;
        }

        .cart-img {
            width: 100px;
            height: 100px;
            padding: 10px 15px 10px 8px;
        }

        .detail-box {
            display: grid;
            row-gap: 0.5rem;
        }

        .cart-product-title {
            font-size: 1.5rem;
            text-transform: uppercase;
        }

        .cart-price {
        }

        .cart-quantity {
            border: 1px solid black;
            outline-color: black;
            width: 2.4rem;
            text-align: center;
            font-size: 1rem;
        }

        .cart-remove {
            font-size: 24px;
            color: black;
            cursor: pointer;
        }

        .total {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            /* padding-top: 15px; */
            /* padding-bottom: 15px; */
        }

        .total-title {
            font-size: 1rem;
        }

        .total-price {
            margin-top: 1rem;
            flex-grow: 1;
            text-align: right;
        }

        .total1 {
            margin-bottom: 0;
            padding-top: 15px;
            padding-bottom: 15px;
            margin-top: 1rem;
            border-top: 2px solid black;
        }

        .button-buy {
            text-align: center;
            display: flex;
            justify-content: space-around;
            width: 300px;
        }

        .btn-buy {
            padding: 8px 18px;
            border: none;
            background: white;
            font-size: 0.9rem;
            font-weight: 500;
            color: black;
        }

            .btn-buy:hover {
                background: gray;
            }

        .btn-buy1 {
            padding: 8px 18px;
            border: none;
            background: black;
            font-size: 0.9rem;
            font-weight: 500;
            color: white;
        }

            .btn-buy1:hover {
                background: black;
            }

        #close-cart {
            position: absolute;
            right: 1rem;
            font-size: 1.6rem;
            color: black;
            cursor: pointer;
        }

        #delete_product {
            font-size: 1.5rem;
            cursor: pointer;
        }

            #delete_product:hover, #close-cart:hover {
                text-shadow: 2px 2px 3px #82888d;
            }

        .footer {
            position: fixed;
            bottom: 20px;
            padding: 20px;
            background-color: #fff;
            z-index: 100;
            width: 360px;
        }

        .cart_ {
            position: relative;
        }
        /* css Scrollbar*/
        .card-content {
            overflow-y: scroll;
            height: 300px;
        }

        ::-webkit-scrollbar {
            width: .5rem;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            box-shadow: inset 0 0 3px grey;
            border-radius: 10px;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: black;
            border-radius: 5px;
        }
    </style>
</head>
<h4 style="color:dimgray;">@ViewBag.tbGioHang</h4>
<div class="cart-content">
    @foreach (var i in Model)
    {
        <div class="cart-box" style="border-bottom: 1px solid #cdc6c6;">
            <img src="~/img/@i.sAnhBia" alt="ảnh sản phẩm" class="cart-img">
            <div class="detail-box">

                <strong>
                    @i.sTenSP
                </strong>

                <input type="number" value="@i.iSoLuong" class="cart-quantity">
                <span class="cart-price"><strong>@Html.FormatValue(@i.dDonGia, "{0:#,##0}")đ</strong></span>

            </div>
            <!--Remove Cart-->

            <a id="delete_product" style="text-decoration:none;" href="@Url.Action("XoaGioHang","Cart",new {iMaSP = @i.iMaSP, url=Request.Url.ToString()})" role="button">&#10005;</a>

        </div>
    }
</div>
<div class="footer" style="width:330px;">
    <div class="total">
        <div class="">Tổng số phụ:</div>
        <div class="total-price">@Html.FormatValue(@ViewBag.TongTien, "{0:#,##0}")đ</div>
    </div>
    <!--Buy Button-->
    <div class="total1">
        <div class="">Yay ! Đơn hàng của bạn được Free ship khi thanh toán qua chuyển khoản hoặc momo </div>
    </div>
    <div class="button-buy">
        <a href="@Url.Action("GioHang","Cart")" style="border:1px solid;"class="btn-buy">XEM GIỎ HÀNG</a>
        <a href="@Url.Action("DatHang","Cart")" type="button" class="btn-buy1">THANH TOÁN</a>
    </div>
    <!-- <button type="button" class="btn-buy">Xem Giỏ Hàng</button> -->
    <!--Cart close-->
</div>
