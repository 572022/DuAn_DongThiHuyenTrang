
@{
    ViewBag.Title = "categories";
    Layout = "~/Views/Shared/_LayoutShopList.cshtml";
}


@model IEnumerable<WebMULTI.Models.SanPham>

@helper Truncate(string s, int length)
{
    if (s.Length < length)
    {
        @s
    }
    else
    {
        @s.Substring(0, length)<text>...</text>
    }
}

<div class="row px-xl-5 " style="margin:0px;">

    @foreach (var i in Model)
    {

        <div class="col-lg-4 col-md-4 col-sm-6 pb-1">

            <div class="product-item bg-light mb-4" style="border: 1px solid #e7e0e09e; padding: 10px">
                <div class="product-img position-relative overflow-hidden">
                    <img class="img-fluid w-100" src="~/img/@i.AnhBia" alt="@i.TenSP">
                    <div class="product-action">
                        <a class="btn btn-outline-dark btn-square" style="width: 100px; font-family: Roboto,sans-serif; padding: 20px;" href="@Url.Action("detail","Home",new {id= i.MaSP})">
                            <i class="fa fa-shopping-cart"><span style="font-family:Roboto,sans-serif;">Xem chi tiết</span></i>
                        </a>

                    </div>
                </div>

                <div class="text-center py-4">
                    <a class="h6 text-decoration-none text-truncate" href="@Url.Action("detail","Home",new {id= i.MaSP})" style="overflow-wrap: break-word;"> @Truncate(@i.TenSP, 25)</a>
                    <div class="d-flex align-items-center justify-content-center mt-2">
                        <h6 class="text-muted ml-2">@Html.FormatValue(@i.GiaSP, "{0:#,##0}") VNĐ</h6>
                    </div>
                    <div class="d-flex align-items-center justify-content-center mb-1">
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small> Đã bán @i.SoLuongBan
                    </div>
                </div>

            </div>

        </div>

    }
</div>


