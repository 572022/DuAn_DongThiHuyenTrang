<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>MultiShop - Online Shop Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <!-- Favicon -->

    <style>
        .navbar .fas {
            margin: !important 0px;
        }
     /*   phần lọc giá */
        .nav-item:hover .dropdown-menu {
            display: block;
        }

        .cl-filter {
            position: relative ;box-shadow: 1px 2px 3px;
        }

        #filter {
            width: 100%;
            background-color: aqua;
            height: auto;
        }

        .li_filter:hover {
            background-color: #e4c244bf;
        }
        .cl-filter a{color:black;}
    </style>


</head>

<body>
    <!-- Nav -->
    @*@{
            Html.RenderPartial("_PartialTopbar_Nav");
        }*@
    @Html.Action("PartialNav", "Home");

    <!--Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light ">
                    <a class="breadcrumb-item text-dark" href="#">Home</a>
                    <a class="breadcrumb-item text-dark" href="#">Shop</a>
                    <span class="breadcrumb-item active">Shop List</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->
    <!-- Shop Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-4">
                <!-- Price Start lọc theo giá -->
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by price</span></h5>
                <div class="bg-light mb-4">
                    <div class="cl-filter">
                        <ul id="filter" class="list-group list-group-flush">
                            @if (ViewBag.active == 1)
                            {
                                <li class="list-group-item li_filter active">
                                    <a class="nav-link" aria-current="page" href="@Url.Action("btnFilter", "Home", new {id=1})">
                                        Mới nhất
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="list-group-item li_filter ">
                                    <a class="nav-link" aria-current="page" href="@Url.Action("btnFilter", "Home", new {id=1})">
                                        Mới nhất
                                    </a>
                                </li>
                            }
                            @if (ViewBag.active == 2)
                            {
                                <li class="list-group-item li_filter active">
                                    <a class="nav-link" aria-current="page" href="@Url.Action("btnFilter", "Home",new {id=2})">
                                        Thấp đến cao
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="list-group-item li_filter ">
                                    <a class="nav-link" aria-current="page" href="@Url.Action("btnFilter", "Home",new {id=2})">
                                        Thấp đến cao
                                    </a>
                                </li>
                            }
                            @if (ViewBag.active == 3)
                            {
                                <li class="list-group-item li_filter active">
                                    <a class="nav-link" aria-current="page" href="@Url.Action("btnFilter", "Home",new {id=3})">
                                        Cao đến thấp
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="list-group-item li_filter ">
                                    <a class="nav-link" aria-current="page" href="@Url.Action("btnFilter", "Home",new {id=3})">
                                        Cao đến thấp
                                    </a>
                                </li>
                            }



                        </ul>
                    </div>
                </div>
                <!-- Price End -->
                <!-- Color Start -->
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by color</span></h5>
                @Html.Action("Filter_colorPartial", "Home")
                <!-- Color End -->

            </div>
            <!-- Shop Sidebar End -->
            <!-- Shop Product Start -->

            <div class="col-lg-9 col-md-8">
                <h1>@ViewBag.content_search</h1>
                <h5 style="color:darkblue;margin-bottom:20px;"> @ViewBag.title_type</h5>

                <div class="row">

                    @RenderBody()

                </div>  
                <i style="color:red;margin-bottom:20px; margin-left:40px;">* @ViewBag.nameColor </i>
            </div>
            <!-- Shop Product End -->
        </div>
    </div>
    <!-- Shop End -->
    <div class="container-fluid bg-dark text-secondary mt-5 pt-5">
        <div class="row px-xl-5 pt-5">
            <div class="col-lg-3 col-md-12 mb-5 pr-3 pr-xl-5">
                <h5 class="text-secondary text-uppercase mb-4">chăm sóc khách hàng</h5>
                <p class="mb-4">Trung tâm trợ giúp</p>
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>Trần Văn Ơn, TDM, Bình Dương</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>Multi@gmail.com</p>
                <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>+012 345 67890</p>
            </div>
            <div class="col-lg-9 col-md-12">
                <div class="row">
                    <div class="col-md-3 mb-5">
                        <h5 class="text-secondary text-uppercase mb-4">Quick Shop</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Về Multi</a>
                            <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Giới thiệu về shop</a>
                            <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Tuyển dụng</a>
                            <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Điều khoản</a>
                            <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Chính hãng</a>
                            <a class="text-secondary" href="#"><i class="fa fa-angle-right mr-2"></i>Liên hệ với chúng tôi</a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <h5 class="text-secondary text-uppercase mb-4">Newsletter</h5>
                        <p>Duo stet tempor ipsum sit amet magna ipsum tempor est</p>
                        <form action="">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Your Email Address">
                                <div class="input-group-append">
                                    <button class="btn btn-primary">Sign Up</button>
                                </div>
                            </div>
                        </form>
                        <h6 class="text-secondary text-uppercase mt-4 mb-3">Follow Us</h6>
                        <div class="d-flex">
                            <a class="btn btn-primary btn-square mr-2" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-primary btn-square mr-2" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-primary btn-square mr-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                            <a class="btn btn-primary btn-square" href="#"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                    <div class="col-md-5 mb-5">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d501594.5289864391!2d106.30950692328534!3d10.833700200000008!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317529e7cf62e581%3A0x45fa3623883f4b3b!2sMulti%20House!5e0!3m2!1svi!2s!4v1702140151167!5m2!1svi!2s" width="360" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                    </div>
                </div>
            </div>
        </div>
        <div class="row border-top mx-xl-5 py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
            <div class="col-md-6 px-xl-0">
                <p class="mb-md-0 text-center text-md-left text-secondary">
                    &copy; <a class="text-primary" href="#">Domain</a>. All Rights Reserved. Designed
                    by dongtrang
                </p>
            </div>
            <div class="col-md-6 px-xl-0 text-center text-md-right">
                <img class="img-fluid" src="~/img/payments.png" alt="">
            </div>
        </div>
    </div>
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
    <script>
        function openNav() {
            document.getElementById("cart").style.right = "0px";
        }
        function closeNav() {
            document.getElementById("cart").style.right = "-370px";
        }
    </script>
</body>

</html>
